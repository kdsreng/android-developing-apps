<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <EditText
        android:layout_weight="1"
        android:id="@+id/id_edittext_enteranumber"
        android:inputType="numberSigned"
        android:hint="@string/hint_edittext_enteranumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <Button
        android:onClick="doubleIt"
        android:layout_gravity="end"
        android:id="@+id/id_btn_double"
        android:text="@string/text_btn_double"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="tripleIt"
        android:layout_gravity="end"
        android:id="@+id/id_btn_triple"
        android:text="@string/text_btn_triple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
